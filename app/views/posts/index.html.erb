<div class="col-lg-6 mx-auto">
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%= @user.photo%>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= @user.name %></h5>
          <p class="card-text"><small class="text-muted">Number of posts: <%= @user.posts_counter%></small></p>
        </div>
      </div>
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="card-body">
        <h5 class="card-title"><%= link_to  post.title, [@user, post] %></h5>
        <p class="card-text"><small class="text-muted"><%= post.text %></small></p>
        <p class="card-text"><small class="text-muted">
        Comment: <%= post.comments_counter %>,
        Likes: <%= post.likes_counter %>
        </small></p>
      </div>
    </div>
    <div class="card mb-3" style="max-width: 540px;">
      <% post.comments.take(5).each do |comment| %>
        <div class="card-body">
          <p class="card-text">
            <small class="text-muted">
              <%= comment.author.name %>: <%= comment.text %>
            </small>
          </p>
        </div>
      <% end %>
    </div>
  <% end %>
  <button type="button" class="btn btn-primary d-grid gap-2 mx-auto">Pagination</button>
</div>
